<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>TimberAPIExample</AssemblyName>
    <Description>An example plugin on how to use the TimberAPI</Description>
