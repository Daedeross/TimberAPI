    <PackageReference Include="BepInEx.PluginInfoProps" Version="1.1.0" />
    <PackageReference Include="UnityEngine.Modules" Version="2021.2.2" IncludeAssets="compile" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../TimberAPI/TimberAPI.csproj" />

    <Reference Include="../libs/Bindito.Core.dll" /> 
    <Reference Include="../libs/Bindito.Unity.dll" /> 
    <Reference Include="../libs/LINQtoCSV.dll" /> 
    <Reference Include="../libs/Timberborn.BottomBarSystem.dll" />
    <Reference Include="../libs/Timberborn.Common.dll" />
    <Reference Include="../libs/Timberborn.CoreUI.dll" />
    <Reference Include="../libs/Timberborn.EntityPanelSystem.dll" />
    <Reference Include="../libs/Timberborn.FactionSystem.dll" />
    <Reference Include="../libs/Timberborn.GameSaveRepositorySystem.dll" />
    <Reference Include="../libs/Timberborn.MapEditor.dll" />
    <Reference Include="../libs/Timberborn.MapEditorScene.dll" />
    <Reference Include="../libs/Timberborn.MapEditorSceneLoading.dll" />
    <Reference Include="../libs/Timberborn.MapSystem.dll" />
    <Reference Include="../libs/Timberborn.MasterScene.dll" />
    <Reference Include="../libs/Timberborn.MasterSceneLoading.dll" />
    <Reference Include="../libs/Timberborn.MainMenuScene.dll" />
    <Reference Include="../libs/Timberborn.MainMenuSceneLoading.dll" />
    <Reference Include="../libs/Timberborn.Localization.dll" />
    <Reference Include="../libs/Timberborn.SingletonSystem.dll" />
    <Reference Include="../libs/Timberborn.TimeSystem.dll" />
    <Reference Include="../libs/Timberborn.ToolSystem.dll" />
    <Reference Include="../libs/Timberborn.WeatherSystem.dll" />
    <Reference Include="../libs/Timberborn.GameDistricts.dll" />
